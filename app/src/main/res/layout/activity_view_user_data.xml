<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:padding="16dp">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="User Details"
      android:layout_marginRight="20dp"
      android:gravity="center"
      android:textSize="30dp"
      android:textStyle="bold"
      android:id="@+id/userdetails"
      android:fontFamily="@font/buenard_regular"
      android:textColor="@color/theme_blue"/>

  <TextView
      android:id="@+id/userNameTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/userdetails"
      android:text="Name"
      android:textSize="22dp"
      android:layout_marginTop="30dp"/>

  <TextView
      android:id="@+id/emailTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Email"
      android:textSize="22dp"
      android:layout_below="@id/userNameTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/studentIdTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Student ID"
      android:textSize="22dp"
      android:layout_below="@id/emailTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/paymentStatusTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Payment Status"
      android:textSize="22dp"
      android:layout_below="@id/studentIdTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/activityLevelTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Activity Level"
      android:textSize="22dp"
      android:layout_below="@id/paymentStatusTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/goalTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Goal"
      android:textSize="22dp"
      android:layout_below="@id/activityLevelTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/genderTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Gender"
      android:textSize="22dp"
      android:layout_below="@id/goalTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/ageTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Age"
      android:textSize="22dp"
      android:layout_below="@id/genderTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/weightTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Weight"
      android:textSize="22dp"
      android:layout_below="@id/ageTextView"
      android:layout_marginTop="15dp"/>

  <TextView
      android:id="@+id/heightTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Height"
      android:textSize="22dp"
      android:layout_below="@id/weightTextView"
      android:layout_marginTop="15dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@id/heightTextView"
      android:layout_marginTop="20dp"
      android:gravity="center">

  <Button
      android:id="@+id/workOutScheduleAdd"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:background="@drawable/mybutton"
      android:layout_below="@id/heightTextView"
      android:text="Add Workout Schedule"/>

  </LinearLayout>
</RelativeLayout>
