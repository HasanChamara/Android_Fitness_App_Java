<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Change this color to your desired pressed state color -->
            <corners android:radius="10dp" /> <!-- Adjust the radius as per your preference -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#1F41BB" /> <!-- Background color of the button -->
            <corners android:radius="10dp" /> <!-- Adjust the radius as per your preference -->
        </shape>
    </item>
</selector>